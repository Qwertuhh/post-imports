{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "typeRoots": [
    "../../node_modules/@types",
  ],
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
